<% if @question == "I am going to work" %>
  <div class ="question">
    <div class ="question-content">
      <h2><%= @question %></h2>
      <p><em>- You</em></p>
    </div>
  </div>
  <div class ="answer">
    <div class ="answer-content">
      <h2>Great!</h2>
      <p><em>- Your Coach</em></p>
    </div>
  </div>
<% elsif @question.include?('?') %>
  <div class ="question">
    <div class ="question-content">
      <h2><%= @question %></h2>
      <p><em>- You</em></p>
    </div>
  </div>
  <div class ="answer">
    <div class ="answer-content">
      <h2>Silly question, get dressed and go to work!</h2>
      <p><em>- Your Coach</em></p>
    </div>
  </div>
<% else %>
  <div class ="question">
    <div class ="question-content">
      <h2><%= @question %></h2>
      <p><em>- You</em></p>
    </div>
  </div>
  <div class ="answer">
    <div class ="answer-content">
      <h2>I don't care, get dressed and go to work!</h2>
      <p><em>- Your Coach</em></p>
    </div>
  </div>
<% end %>

<p><%= link_to 'ask a question', '/ask' %></p>
